{
  // Configure Prettier eslint
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.formatOnType": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  // Enable ESLint auto-fixing on save
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  // Exclude files from the file explorer
  "files.exclude": {
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true,
    "**/tsconfig.json": false
  },
  // Force to follow the `GUIDELINES.md`
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  // Nix environment settings
  "nixEnvSelector.nixFile": "${workspaceFolder}/default.nix"
}
